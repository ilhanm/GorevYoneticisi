@model GorevYoneticisi.Models.Gorev

<form method="post">
    <input asp-for="gorevId" hidden /> @*id yi artirip yeni gorev ekleme- var olani degistir*@
	<div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<h2 class="text-info pl-3">Görevi Düzenle</h2>
		</div>

		<div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="gorevAciklama"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="gorevAciklama" class="form-control" />
                        <span asp-validation-for="gorevAciklama" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="baslangicTarihi"> </label>
                    </div>
                    <div class="col-8">
                         <input asp-for="baslangicTarihi" class="datetime-local" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="bitisTarihi"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="bitisTarihi" class="datetime-local" />
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                           <input type="submit" class="btn btn-info w-100" value="Görevi Değiştir" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary">
                            Geri Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

	</div>
</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}
